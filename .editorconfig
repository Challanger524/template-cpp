# Topmost https://EditorConfig.org file
# Important to place '# comments' on new lines only!
root = true

[*]
charset     = utf-8
end_of_line = lf
#indent_style = tab
#indent_size  = 4
insert_final_newline     = true
trim_trailing_whitespace = true

[*.{c,h,cc,hh,cpp,hpp,cxx,hxx,c++,h++,inc,inl}]
indent_style = tab
indent_size  = 4

[{*.go,go.mod,go.sum}]
indent_style = tab
indent_size  = 4

[{CMakeLists.txt,*.cmake}]
indent_style = space
indent_size  = 2

#[{makefile,Makefile,*.mk}]
#indent_style = tab
#indent_size  = 2

[{.gitconfig,.gitignore,.gitmodules}]
indent_style = tab
indent_size  = 4

# rule: MD009: 2+ spaces (or `\`) as for `<br/>`
[*.md]
indent_style = tab
indent_size  = 2
# scrap this nonesence, better to use `\`
#trim_trailing_whitespace = false

[*.{xml,y{a,}ml,json,code-workspace}]
indent_style = space
indent_size  = 2

[*.{py,js,jsx,vue,ts,tsx,css,sass,scss,less}]
indent_style = space
indent_size  = 4

# save formatting
[*.patch]
indent_style = unset
trim_trailing_whitespace = false

